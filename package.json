{
  "name": "@./source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "npm run start:all",
    "start:all": "npm run build:shared && concurrently --kill-others --prefix \"[{name}]\" --names \"backend,frontend\" \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "npx nx serve game-engine",
    "start:frontend": "npx nx dev frontend",
    "build:shared": "npx nx build shared-types",
    "build:all": "npx nx build shared-types && npx nx build game-engine && npx nx build frontend",
    "dev": "npm run start:all",
    "logs": "echo \"Logs are displayed in the terminal. Use Ctrl+C to stop services.\"",
    "test": "npm run test:comprehensive",
    "test:comprehensive": "node test-setup.js",
    "test:backend": "curl http://localhost:3001/api",
    "test:frontend": "curl http://localhost:3000",
    "test:unit": "npx nx test",
    "test:e2e": "npx nx e2e frontend-e2e",
    "test:watch": "npx nx test --watch",
    "lint": "npx nx lint",
    "lint:fix": "npx nx lint --fix"
  },
  "private": true,
